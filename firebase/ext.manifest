name: "Firebase"

platforms:
  x86_64-osx:
    context:
        frameworks: ["CoreFoundation", "Security"]
        flags:      ["-stdlib=libc++"]
        libs:       ["c++"]

  armv7-android:
    context:
        flags:      ["-std=c++11"]

  armv7-ios:
    context:
        flags:      ["-stdlib=libc++"]
        linkFlags:  ["-ObjC"]
        libs:       ["c++"]

  arm64-ios:
    context:
        flags:      ["-stdlib=libc++"]
        linkFlags:  ["-ObjC"]
        libs:       ["c++"]
